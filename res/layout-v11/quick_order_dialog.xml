<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/order_code_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/order_code_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="@dimen/small_margin" />

    <EditText
        android:id="@+id/order_code_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin" 
        android:layout_marginRight="@dimen/small_margin"  >

        <requestFocus />
    </EditText>
    
    <TextView
        android:id="@+id/order_quantity_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/order_quantity_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="@dimen/small_margin" />

    <EditText
        android:id="@+id/order_quantity_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginLeft="@dimen/small_margin" 
        android:layout_marginRight="@dimen/small_margin"  >
    </EditText>
	
    <TextView
        android:id="@+id/order_type_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/order_type_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="@dimen/small_margin" 
        android:layout_marginLeft="@dimen/small_margin" />
    
    <RadioGroup
        android:id="@+id/order_type_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin" 
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/order_case_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_case_radio_title"
            android:checked="true" />

        <RadioButton
            android:id="@+id/order_unit_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_unit_radio_title"/>

    </RadioGroup>

</LinearLayout>