<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/text_margin"
    android:layout_marginLeft="@dimen/text_margin"
    android:layout_marginRight="@dimen/text_margin"
    android:layout_marginTop="@dimen/text_margin"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/cases_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.21"
            android:orientation="vertical"
            android:padding="@dimen/text_margin" >

            <TextView
                android:id="@+id/order_row_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >
            </TextView>

            <TextView
                android:id="@+id/order_row_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >
            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin"
            android:text="X" >
        </TextView>       

        <LinearLayout
            android:layout_width="0dip"
        	android:layout_height="wrap_content"
        	android:layout_weight="0.75"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/order_row_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.66"
                android:padding="@dimen/text_margin"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/order_row_price"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:padding="@dimen/text_margin" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/units_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.21"
            android:orientation="vertical"
            android:padding="@dimen/text_margin" >

            <TextView
                android:id="@+id/units_row_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >
            </TextView>

            <TextView
                android:id="@+id/units_row_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >
            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_margin"
            android:text="X" >
        </TextView>

        
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/units_row_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.66"
                android:padding="@dimen/text_margin"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/units_row_price"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:padding="@dimen/text_margin" >
            </TextView>
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
	    android:id="@+id/freight_row"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:visibility="gone" >
	
        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:padding="@dimen/text_margin" >
        </LinearLayout>
        
	    <TextView
	        android:id="@+id/freight_row_label"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.5"
	        android:padding="@dimen/text_margin"
	        android:text="@string/freight_row_title"
	        android:textStyle="bold" >
	    </TextView>
	
	    <TextView
	        android:id="@+id/freight_row_price"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.25"
	        android:padding="@dimen/text_margin" >
	    </TextView>
	</LinearLayout>
            
</LinearLayout>