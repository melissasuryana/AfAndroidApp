<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/af_light_grey"
	    android:orientation="vertical" >
	
	    <TextView
	        android:id="@+id/product_desc_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/banner_bg"
	        android:paddingBottom="@dimen/small_margin"
	        android:paddingLeft="@dimen/small_margin"
	        android:paddingTop="@dimen/small_margin"
	        android:text=""
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="@color/af_white" />
	
	    <TextView
	        android:id="@+id/product_category_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:layout_marginBottom="@dimen/small_margin"
	        android:layout_marginRight="@dimen/small_margin"
	        android:layout_marginTop="@dimen/small_margin"
	        android:text=""
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="@color/af_grey" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/small_margin"
	        android:layout_marginRight="@dimen/small_margin"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/TextView02"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/border_bottom"
	            android:text="@string/product_code_title"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/af_dark_green" />
	
	        <TextView
	            android:id="@+id/product_code_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/small_margin"
	            android:layout_marginLeft="@dimen/small_margin"
	            android:layout_marginTop="@dimen/text_margin"
	            android:text=""
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	
	        <TextView
	            android:id="@+id/is_splittable_label"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/border_bottom"
	            android:text="@string/is_splittable_title"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/af_dark_green" />
	
	        <TextView
	            android:id="@+id/is_splittable_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/small_margin"
	            android:layout_marginLeft="@dimen/small_margin"
	            android:layout_marginTop="@dimen/text_margin"
	            android:text=""
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	        
	        <TextView
	            android:id="@+id/product_price_label"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/border_bottom"
	            android:text="@string/product_price_title"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/af_dark_green" />
	
	        <LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >
		        <TextView
		            android:id="@+id/product_price_text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="@dimen/small_margin"
		            android:layout_marginLeft="@dimen/small_margin"
		            android:layout_marginTop="@dimen/text_margin"
		            android:text=""
		            android:textAppearance="?android:attr/textAppearanceSmall" />	
		        <TextView
		            android:id="@+id/product_promo_text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="@dimen/small_margin"
		            android:layout_marginLeft="@dimen/small_margin"
		            android:layout_marginTop="@dimen/text_margin"
		            android:text=""
		            android:textAppearance="?android:attr/textAppearanceSmall" 
		            android:textColor="@color/af_red"/>
	        </LinearLayout>
	          
	        <LinearLayout 
	            android:id="@+id/specials_layout"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="@dimen/small_margin"
			    android:layout_marginBottom="@dimen/small_margin"
			    android:orientation="horizontal"
			    android:visibility="gone" >
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/special_title"
		            android:textAppearance="?android:attr/textAppearanceSmall" 
		            android:textColor="@color/af_red" />	
		        <TextView
		            android:id="@+id/product_specials_text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"		            
		            android:layout_marginLeft="@dimen/small_margin"		            
		            android:text=""
		            android:textAppearance="?android:attr/textAppearanceSmall"/>
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:id="@+id/qda_layout"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="@dimen/small_margin"
			    android:layout_marginBottom="@dimen/small_margin"
			    android:orientation="horizontal"
			    android:visibility="gone" >
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/qda_title"
		            android:textAppearance="?android:attr/textAppearanceSmall" 
		            android:textColor="@color/af_red" />	
		        <TextView
		            android:id="@+id/product_qda_text"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"		            
		            android:layout_marginLeft="@dimen/small_margin"		            
		            android:text=""
		            android:textAppearance="?android:attr/textAppearanceSmall"/>
	        </LinearLayout>
	        
	        <TextView
	            android:id="@+id/product_split_price_label"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/border_bottom"
	            android:text="@string/product_split_price_title"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/af_dark_green" />
	
	        <TextView
	            android:id="@+id/product_split_price_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/small_margin"
	            android:layout_marginLeft="@dimen/small_margin"
	            android:layout_marginTop="@dimen/text_margin"
	            android:text=""
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	        
	        <TextView
	            android:id="@+id/product_tax_label"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/border_bottom"
	            android:text="@string/product_tax_title"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/af_dark_green" />
	
	        <TextView
	            android:id="@+id/product_tax_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/small_margin"
	            android:layout_marginLeft="@dimen/small_margin"
	            android:layout_marginTop="@dimen/text_margin"
	            android:text=""
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	        
	        <TextView
	            android:id="@+id/product_freight_label"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/border_bottom"
	            android:text="@string/product_freight_title"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/af_dark_green" />
	
	        <TextView
	            android:id="@+id/product_freight_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/small_margin"
	            android:layout_marginLeft="@dimen/small_margin"
	            android:layout_marginTop="@dimen/text_margin"
	            android:text=""
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	        
	        <TextView
	            android:id="@+id/TextView07"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/border_bottom"
	            android:text="@string/unit_per_case_title"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/af_dark_green" />
	
	        <TextView
	            android:id="@+id/unit_per_case_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/small_margin"
	            android:layout_marginLeft="@dimen/small_margin"
	            android:layout_marginTop="@dimen/text_margin"
	            android:text=""
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	        
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/border_bottom"
	            android:text="@string/unit_size_title"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/af_dark_green" />
	
	        <TextView
	            android:id="@+id/unit_size_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/small_margin"
	            android:layout_marginLeft="@dimen/small_margin"
	            android:layout_marginTop="@dimen/text_margin"
	            android:text=""
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	
	        <TextView
	            android:id="@+id/TextView04"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/border_bottom"
	            android:text="@string/unit_type_title"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/af_dark_green" />
	
	        <TextView
	            android:id="@+id/unit_type_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/small_margin"
	            android:layout_marginLeft="@dimen/small_margin"
	            android:layout_marginTop="@dimen/text_margin"
	            android:text=""
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	
	        <TextView
	            android:id="@+id/TextView05"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@drawable/border_bottom"
	            android:text="@string/pack_type_title"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="@color/af_dark_green" />
	
	        <TextView
	            android:id="@+id/pack_type_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/small_margin"
	            android:layout_marginLeft="@dimen/small_margin"
	            android:layout_marginTop="@dimen/text_margin"
	            android:text=""
	            android:textAppearance="?android:attr/textAppearanceSmall" />	        
	    </LinearLayout>
	
	</LinearLayout>
</ScrollView>